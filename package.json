{
  "name": "clean-self-webpack-plugin",
  "version": "1.0.5",
  "main": "dist/clean_self_webpack_plugin.js",
  "author": "Chris Blossom",
  "description": "Webpack plugin to delete extraneous files created by Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisblossom/clean-self-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/chrisblossom/clean-self-webpack-plugin/issues"
  },
  "license": "MIT",
  "keywords": [
    "webpack",
    "plugin",
    "clean",
    "cleanup",
    "clear",
    "directory",
    "file",
    "exclude",
    "remove",
    "delete",
    "trash",
    "rm",
    "rf",
    "rmrf",
    "rimraf",
    "del",
    "node"
  ],
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=2.0.0"
  },
  "scripts": {
    "clean": "del ./dist/**/*",
    "clean:packages": "del ./node_modules",
    "build": "npm run clean && NODE_ENV=production babel ./src --out-dir ./dist --source-maps",
    "test": "jest",
    "test:all": "npm run test:webpack2 && npm run test:webpack3",
    "test:webpack2": "npm i --no-save webpack@2 && jest",
    "test:webpack3": "npm i --no-save webpack@3 && jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier \"**/*.js\" --write",
    "prepublishOnly": "npm run clean:packages && npm install && npm run format && npm run lint:fix && npm run test:all && npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest",
      "git add"
    ]
  },
  "peerDependencies": {
    "webpack": "^2.0.0-0 || ^3.0.0-0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "del": "^3.0.0"
  }
}
