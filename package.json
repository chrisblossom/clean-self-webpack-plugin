{
  "name": "clean-self-webpack-plugin",
  "version": "1.0.3",
  "main": "dist/clean_self_webpack_plugin.js",
  "author": "Chris Blossom",
  "description": "Webpack plugin to delete extraneous files created by Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisblossom/clean-self-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/chrisblossom/clean-self-webpack-plugin/issues"
  },
  "license": "MIT",
  "keywords": [
    "webpack",
    "plugin",
    "clean",
    "node"
  ],
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=2.0.0"
  },
  "scripts": {
    "clean": "del ./dist/**/*",
    "build": "npm run clean && NODE_ENV=production babel ./src --out-dir ./dist --source-maps",
    "test": "jest",
    "test:all": "npm run test:webpack2 && npm run test:webpack3",
    "test:webpack2": "npm i --no-save webpack@2 && jest",
    "test:webpack3": "npm i --no-save webpack@3 && jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "find ./src -name \"*.js\" | grep -v -f .prettierignore | xargs prettier --tab-width 4 --single-quote --trailing-comma all --write",
    "prepublishOnly": "npm run prettier && npm run lint:fix && npm run test:all && npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --tab-width 4 --single-quote --trailing-comma all --write",
      "eslint --fix",
      "jest",
      "git add"
    ],
    "./*.js": [
      "prettier --tab-width 4 --single-quote --trailing-comma es5 --write",
      "eslint --fix",
      "jest",
      "git add"
    ]
  },
  "peerDependencies": {
    "webpack": "^2.0.0-0 || ^3.0.0-0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-env": "1.6.0",
    "del-cli": "1.1.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-import": "2.6.1",
    "eslint-plugin-jest": "20.0.3",
    "husky": "0.14.2",
    "jest": "20.0.4",
    "lint-staged": "4.0.0",
    "prettier": "1.5.2",
    "webpack": "3.0.0"
  },
  "dependencies": {
    "del": "3.0.0"
  }
}
